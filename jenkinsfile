pipeline {
  agent any
  stages {
    stage("verify tooling") {
      steps {
        bat '''
          docker version
          docker info
          docker compose version
        '''
      }
    }
    stage('Prune Docker data') {
      steps {
        bat 'docker system prune -a'               
      }
    }
    stage('Start container') {
      steps {
        bat 'docker compose up -d --no-color --wait'   ## you can force docker-compose not to stop and recreate the containers  
        bat 'docker compose ps'                        ## list the containers with current status and exposed ports
      }
    }
    stage('Stoping') {
      steps {
        bat 'docker stop'   
      }
    }
    stage('minikube') {
      steps {
        bat 'minikube start' 
        bat 'minikube get deploy'
        bat 'minikube get svc'
      }
    }
  }
}
